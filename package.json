{
  "name": "product-inventory-manager",
  "version": "1.0.0",
  "description": "Set of npm packages used with the Product Inventory Manager webapp.",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Gabriel-Lemus/Product-Inventory-Manager.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Gabriel-Lemus/Product-Inventory-Manager/issues"
  },
  "homepage": "https://github.com/Gabriel-Lemus/Product-Inventory-Manager#readme",
  "dependencies": {
    "firebase": "^8.2.7",
    "firebaseui": "^4.7.3"
  },
  "prettier": {
    "arrowParens": "always",
    "bracketSpacing": true,
    "endOfLine": "crlf",
    "htmlWhitespaceSensitivity": "css",
    "insertPragma": false,
    "jsxBracketSameLine": false,
    "jsxSingleQuote": false,
    "printWidth": 80,
    "proseWrap": "preserve",
    "quoteProps": "as-needed",
    "requirePragma": false,
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "useTabs": false,
    "vueIndentScriptAndStyle": false,
    "overrides": [
      {
        "files": ["*.html"],
        "options": {
          "printWidth": 120,
          "parser": "html"
        }
      },
      {
        "files": ["*.css"],
        "options": {
          "parser": "css"
        }
      },
      {
        "files": ["*.js"],
        "options": {
          "parser": "babel"
        }
      },
      {
        "files": ["*.ts"],
        "options": {
          "parser": "typescript"
        }
      },
      {
        "files": ["*.json", "*.jsonc"],
        "options": {
          "parser": "json"
        }
      }
    ]
  }
}
